<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="RecipeManager.MAUI.Views.AddRecipePage"
    Title="Add Recipe">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <Label Text="Recipe Name" FontAttributes="Bold" />
            <Entry 
                x:Name="NameEntry" 
                Text="{Binding NewRecipe.Title}" 
                Placeholder="Enter recipe name" />

            <Label Text="Description" FontAttributes="Bold" />
            <Editor 
                x:Name="DescriptionEditor"
                Text="{Binding NewRecipe.Description}"
                Placeholder="Enter description"
                HeightRequest="100" />

            <Label Text="Cook Time" FontAttributes="Bold" />
            <Entry 
                x:Name="CookTimeEntry"
                Text="{Binding NewRecipe.CookTimeMinutes}"
                Keyboard="Numeric"
                Placeholder="e.g. 30" />

            <Label Text="Ingredients" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding Ingredients}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                            <Entry Text="{Binding Quantity}" WidthRequest="80" Placeholder="Qty" />
                            <Entry Text="{Binding Name}" Placeholder="Ingredient" />
                            <Button Text="Remove" Clicked="OnRemoveIngredientClicked" CommandParameter="{Binding .}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <HorizontalStackLayout Spacing="20">
                <Button Text="Add Ingredient" Clicked="OnAddIngredientClicked" />
                <Button Text="Save Recipe" Clicked="OnSaveClicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
